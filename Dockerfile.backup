# Dockerfile für abpack_verwaltung mit Multi-Stage-Build

# Stage 1: Builder - Build Frontend & Backend
FROM node:22-alpine AS builder

WORKDIR /app

# pnpm Global Installer
RUN npm install -g pnpm@10.29.3

# Dependencies
COPY package.json pnpm-lock.yaml ./
RUN pnpm install --frozen-lockfile

# Source Code
COPY . .

# Build
ENV NODE_ENV=production
RUN pnpm build

# Stage 2: Runtime
FROM node:22-alpine

WORKDIR /app

# pnpm für Runtime
RUN npm install -g pnpm@10.29.3

# Production Dependencies
COPY package.json pnpm-lock.yaml ./
RUN pnpm install --frozen-lockfile --prod

# Built Artifacts aus Builder
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/client/index.html ./client/index.html
COPY --from=builder /app/drizzle ./drizzle

# .env (wird bei Runtime konfiguriert)
COPY .env .env.example ./

EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000', (r) => {if (r.statusCode !== 200) throw new Error(r.statusCode)})" || exit 1

CMD ["node", "dist/index.js"]
